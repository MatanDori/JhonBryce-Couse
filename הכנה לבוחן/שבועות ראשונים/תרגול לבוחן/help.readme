// ×¤×•× ×§×¦×™×” ×œ××™×•×Ÿ ××¢×¨×š ×œ×¤×™ ×××¤×™×™×Ÿ
function sortArrayByProperty(array, property, ascending = true) {
    return array.sort((a, b) => {
        if (a[property] < b[property]) return ascending ? -1 : 1;
        if (a[property] > b[property]) return ascending ? 1 : -1;
        return 0;
    });
}


